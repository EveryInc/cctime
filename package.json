{
  "name": "claude-highscore",
  "version": "1.8.0",
  "description": "Claude Code Transcript Time Analyzer - Analyze response times from claude.ai transcripts",
  "main": "dist/cli.js",
  "module": "dist/cli.js",
  "type": "module",
  "bin": {
    "claude-highscore": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "start": "bun run src/cli.tsx",
    "dev": "bun --watch src/cli.tsx",
    "build": "bun build src/cli.tsx --outdir dist --target node --format esm --external commander --external chalk --external date-fns --external zod --external figlet && sed -i '' '1s|.*|#!/usr/bin/env node|' dist/cli.js && sed -i '' '2d' dist/cli.js",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "keywords": [
    "claude",
    "transcript",
    "analyzer",
    "cli",
    "performance",
    "response-time"
  ],
  "author": "Every Environment",
  "homepage": "https://github.com/EveryInc/cctime",
  "repository": {
    "type": "git",
    "url": "https://github.com/EveryInc/cctime.git"
  },
  "bugs": {
    "url": "https://github.com/EveryInc/cctime/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/figlet": "^1.7.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "date-fns": "^3.2.0",
    "figlet": "^1.8.2",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
